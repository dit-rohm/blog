<div class="social-buttons clearfix">
  <ul>
    <!-- twitter -->
    <li>
      <a href="https://twitter.com/share" class="twitter-share-button" data-url="https://blog.dit-rohm.com<%= current_page.url %>" data-via="dit_rohm" data-related="dit_rohm">Tweet</a>
    </li>
    <!-- Facebook -->
    <li>
      <div class="fb-share-button" data-href="https://blog.dit-rohm.com<%= current_page.url %>" data-layout="button_count"></div>
    </li>
    <!-- Pocket -->
    <li>
      <a data-pocket-label="pocket" data-pocket-count="horizontal" class="pocket-btn" data-lang="en"></a>
    </li>
    <!-- Hatena -->
    <li>
      <a href="https://b.hatena.ne.jp/entry/https://blog.dit-rohm.com<%= current_page.url %>" class="hatena-bookmark-button" data-hatena-bookmark-title="<%= current_page.data.title + ' - ' unless current_page.data.title.nil? %>dit" data-hatena-bookmark-layout="standard-balloon" data-hatena-bookmark-lang="ja" title="このエントリーをはてなブックマークに追加">
      <img src="http://b.st-hatena.com/images/entry-button/button-only.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;" /></a>
    </li>
  </ul>
</div>
